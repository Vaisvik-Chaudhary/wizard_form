    <div>
      <h5><%= f.label :pet_name %></h5>
      <%= f.text_field :pet_name %>
    </div>

    <br/>

    <div>
        <%= f.submit 'Complete', class:"btn btn-success" %>
    </div>
    <br>
    <div>
        <%= link_to 'Previous Step', previous_wizard_path, class:"btn btn-secondary" %>
    </div>

<% end %>